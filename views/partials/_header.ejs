<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (username!==undefined) { %>
      <form class="form-inline mt-0" action="/logout" method="POST">
        <div class="form-group">
          <p class="mr-1 text-right" style="width: 300px; margin: 1em">Logged in As: <%= username %>
          </p>
          <button type="submit" class="btn btn-primary btn-outline-dark bg-transparent ml-3">Logout</button>
        </div>
      </form>
      <% } else { %>
        <form class="form-inline justify-content-center mt-0" action="/login" method="POST">
          <input type="text" name="username" placeholder="Username" class="form-control mr-1 ml-1"
            style="width: 300px; margin: 1em">
          <button type="submit" class="btn btn-primary btn-outline-dark bg-transparent ml-1">Login</button>
        </form>
        <% } %>
  </nav>
</header>